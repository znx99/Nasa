<script>
  // Mostrar dashboard apÃ³s 5s
  setTimeout(() => {
    document.getElementById('vinheta').style.display = 'none';
    document.getElementById('dashboard').style.display = 'block';
    document.body.style.overflow = 'auto';
  }, 5000);

  // Chat simples
  const input = document.getElementById('input');
  const send  = document.getElementById('send');
  const list  = document.getElementById('messages');

  function appendMsg(text, who='you'){
    const div = document.createElement('div');
    div.className = 'msg ' + who;
    div.textContent = text;
    list.appendChild(div);
    list.scrollTop = list.scrollHeight;
  }

  function replyBot(text){
    setTimeout(() => appendMsg('VocÃª disse: ' + text, 'bot'), 400);
  }

  function handleSend(){
    const v = input.value.trim();
    if(!v) return;
    appendMsg(v, 'you');
    input.value='';
    replyBot(v);
  }

  send.addEventListener('click', handleSend);
  input.addEventListener('keydown', e => { if(e.key==='Enter'){ e.preventDefault(); handleSend(); }});
</script>
